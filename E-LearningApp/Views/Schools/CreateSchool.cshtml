@model E_LearningApp.Models.School

@{
    ViewData["Title"] = "CreateSchool";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodaj školu</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSchool">

            <div class="form-group">
                <label asp-for="Name" class="control-label">Naziv škole</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj školu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllSchools">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
