@model E_LearningApp.Models.Course
@{
    ViewData["Title"] = "UpdateCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Izmeni podatke o kursu</h2>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("UpdateCourse", "Courses"))
        {
            <div class="form-group">
                @Html.LabelFor(c => c.Name)
                @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
            </div>
            @Html.HiddenFor(c => c.Id)
            <div class="form-group">
                @Html.LabelFor(c => c.Link)
                @Html.TextBoxFor(c => c.Link, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Description)
                @Html.TextBoxFor(c => c.Description, new { @class = "form-control" })
            </div>
          
            <button type="submit" class="btn btn-primary">Sačuvaj</button>
        }
    </div>
</div>

