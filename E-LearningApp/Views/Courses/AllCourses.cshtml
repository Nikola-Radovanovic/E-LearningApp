@model IEnumerable<E_LearningApp.Models.Course>
@{
    ViewData["Title"] = "AllCourses";
    Layout = "";
    @await Html.PartialAsync("~/Views/Shared/_DataTablesPartial.cshtml")
}
<div class="row">
    <br />
    <h1>Kursevi</h1>
    <div class="col-lg-11">
        <table class="table table-striped table-bordered" id="example" style="width:100%">
            <thead>
                <tr>
                    <th>Naziv kursa</th>
                    <th>Link kursa</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(course.Name, "GetCourse", "Courses", new { id = course.Id })</td>
                        <td>@course.Link</td>
                        <td>
                            @Html.ActionLink("Update", "UpdateCourse", "Courses", new { id = course.Id })
                            @Html.ActionLink("Delete", "DeleteCourse", "Courses", new { id = course.Id })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    <div class="col-lg-1">
        <a asp-action="CreateCourse" class="btn btn-primary">Dodaj kurs</a>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>

