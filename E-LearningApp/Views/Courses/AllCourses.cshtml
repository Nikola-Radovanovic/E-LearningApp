@model IEnumerable<E_LearningApp.Models.Course>
@{
    ViewData["Title"] = "AllCourses";
    Layout = "~/Views/Shared/_DataTablesPartial.cshtml";
}

<h2>Kursevi</h2>
<div class="row">
    <div class="col-lg-11">
        <table id="courses" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="bg-primary">
                    <th>Naziv kursa</th>
                    <th>Link kursa</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(course.Name, "GetCourse", "Courses", new { id = course.Id })</td>
                        <td>@course.Link</td>
                        <td>
                            @Html.ActionLink("Update", "UpdateCourse", "Courses", new { id = course.Id })
                            @Html.ActionLink("Delete", "DeleteCourse", "Courses", new { id = course.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-1">
        <a asp-action="CreateCourse" class="btn btn-primary">Dodaj kurs</a>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#courses').DataTable();
    });
</script>

